<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/global.css">
    <title>Membership Form</title>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <form action="/member" method="POST" class="card">
      <%- include('./partials/card-header.ejs') %>
      <div class="card-content">
        <% if (locals.currentUser) { %>
          <% if (locals.currentUser.is_member) { %>
            <h2>You are already a member!</h2>
          <% } else { %>
            <h1 class="card-title">Membership</h1>
            <%- include('./partials/error.ejs') %>
            <label for="code">Membership code</label>
            <input type="password" name="code" id="code" />
            <button class="secondary-button">Submit</button>
          <% } %>
        <% } else { %>
          <h2 class="card-title">Please login to apply for membership</h2>
        <% } %>
      </div>
      <a href="/"><button type="button" class="secondary-button">Return to homepage</button></a>
    </form>
  </body>
</html>

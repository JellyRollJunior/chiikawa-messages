<!DOCTYPE html>
<html lang="en" class="blue-stripe-background">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/global.css">
    <title>Membership Form</title>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <form action="/member" method="POST" class="card standalone-card shadow">
        <%- include('./partials/card-header.ejs') %>
        <div class="card-content">
          <h1 class="card-title">Membership</h1>
          <%- include('./partials/error.ejs') %>
          <label for="code">Membership code</label>
          <input type="password" name="code" id="code" required />
          <button class="secondary-button">Submit</button>
        </div>
        <a href="/"><button type="button" class="return-button primary-button">Return to Homepage</button></a>
      </form>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
